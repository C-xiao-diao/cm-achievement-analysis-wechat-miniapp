<!--index.wxml-->
<view class="container" bindtap="closeUl">
  <text class="title">— 请选择您的身份 —</text>
  <view class="identity">
    <view data-role="{{0}}" class="{{role === 0 ? 'active' :''}}" bindtap="changeRole">
      <image class="icon" src="/imgs/teacher.svg" alt=""></image>
      <image class="right" src="/imgs/right.svg"></image>
      <text>老师</text>
    </view>
    <view  data-role="{{1}}" class="{{role === 1 ? 'active' :''}}" bindtap="changeRole">
      <image class="icon" src="/imgs/parent.svg" alt=""></image>
      <image class="right" src="/imgs/right.svg"></image>
      <text>家长</text>
    </view>
  </view>

