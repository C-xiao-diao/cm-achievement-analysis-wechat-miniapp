/* payfor.wxss */
.container {
    display: block;
    width: 100%;
    height: 1621rpx;
    margin: 0;
    padding: 0;
    position: relative;
}

.payfor_bg {
    position: absolute;
    width: 100%;
    height: 1621rpx;
    z-index: -1;
}

/* 文案样式 */
.big-title {
    width: 100%; 
    text-align: center;
    height: 120rpx;
    position: relative;
}
.big-title image {
    width: 100%;
    height: 120rpx;
}
.feature {
    width: 100%;
    display: flex;
    margin-top: 30rpx;
    position: relative;
    height: 450rpx;
}
.feature image {
    width: 100%;
}
.feature-content{
    width:100%;
    position: absolute;
    top: 28%;
    left: 12%;
}

.feature-content swiper-item text {
    line-height: 65rpx;
    font-size: 38rpx;
}

.payfor-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 1260rpx;
}

/* 地址弹框 */
.mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:  rgba(0,0,0,0.5);
}
.cancelModal{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    right: 0;
    top: 0;
    margin-right: -40rpx;
    margin-top: -40rpx;
}

/* 文案样式end */


/* 支付方案样式 */
.pay-option {
    margin: 70rpx auto 30rpx;
    display: flex;
    width: 95%;
    align-items: flex-end;
}

.pay-option .option {
    flex: 1;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
    position: relative;
    padding: 30rpx 10rpx;
    border-radius: 15rpx;
    border: 2rpx solid #f9f7ef;
    background: #f9f7ef;
}

.pay-option .active {
    border: 2rpx solid #4c769a;
    box-shadow: 0 0 10rpx rgba(33,132,159,0.2);
}

.pay-option .option:nth-child(1), .pay-option .option:nth-child(2){
    margin-right: 30rpx;
}

.option .tag {
    width: 120rpx;
    padding: 5rpx 0;
    text-align: center;
    position: absolute;
    top: -20rpx;
    left: -2rpx;
    background: #21849f;
    border-radius: 20rpx 0;
    color: #fff;
    font-size: 24rpx;
}

.first-month{
    width: 100rpx;
    flex: 0.8 !important;
}

.option-type , .cost , .original-cost {
    display: block;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    padding-bottom: 10rpx;
}

.option-type {
    font-size: 32rpx;
}

.original-cost {
    text-decoration: line-through;
    color: #6a6a6a;
    font-size: 22rpx;
}

.num {
    font-size: 40rpx;
}

/* 支付方案样式end */

/* 配送方式 */
.delivery-way{
    font-weight: 600;
    font-size: 34rpx;
}
/* 配送地址 */
.address {
    /* position: absolute; */
    width: 95%;
    box-sizing: border-box;
    /* box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
    border-radius: 20rpx; */
    padding: 0rpx 30rpx;
    margin: 60rpx 0;
}

.add-tab {
    width: 100%;
    margin-top: 20rpx;
}

.add-tab text {
    float: left;
    display: block;
    width: 150rpx;
    border: 2rpx solid #333;
    font-size: 30rpx;
    text-align: center;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.add-tab text.active {
    background: #21849f;
    color: #fff;
    border: 2rpx solid #21849f;
}

.tab-container {
    clear: both;
    height: 285rpx;
    background: #f9f7ef;
    border: 2rpx solid #0b2d35;
    border-radius: 25rpx;
    box-sizing: border-box;
    padding: 30rpx;
    margin-bottom: 60rpx;
    overflow-y: scroll;
}

.tab-container text {
    font-size: 34rpx;
    line-height: 45rpx;
}



.devivery {
    width: 86%;
    /* height: 300rpx; */
    position: absolute;
    left: 7%;
    top: 30%;
    z-index: 999999;
    background: #f9f7ef;
    border-radius: 20rpx;
    padding-top: 50rpx;
    box-sizing: content-box;
}

.payfor_box {
    position: absolute;
    top: 100rpx;
    left: 0;
    width: 100%;
    height: 215rpx;
    z-index: -1;
}

.devivery view {
    width: 90%;
    margin: 0 auto;
    display: flex;
    height: 65rpx;
    z-index: 9999;
    position: relative;
}


.devivery view text:first-child {
    width: 120rpx;
    font-size: 30rpx;
    line-height: 65rpx;
    text-align: right;
}

.devivery input {
    flex: 1;
    height: 45rpx;
    line-height: 45rpx;
    border-bottom: 2rpx solid #ccc;
    margin-top: 10rpx;
}

.devivery .note {
    display: block;
    width: 100%;
    color: #333;
    margin-left: 150rpx;
}

.addAddress{
    margin-top: 50rpx;
    padding: 0;
    height: 90rpx!important;
    line-height: 90rpx!important;
}

/* 配送地址end */

