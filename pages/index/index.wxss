#getUserInfoBtn {
  width:100% !important;
  height:100% !important;
  opacity: 0 !important;
  background: #fff !important;
  position:fixed !important;
  top:0 !important;
  left:0 !important;
  z-index:1000 !important;
}

.title {
  font-size: 36rpx;
  padding: 30rpx 0;
}

.title:first-child {
  padding-top: 0;
}

.identity {
  width: 90%;
  align-items: center;
}

.identity .icon {
  display: block;
  float: right;
  width: 80rpx;
  height: 80rpx;
}

.identity .right {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 28rpx;
  height: 28rpx;
}

.identity > view {
  width: 100%;
  padding: 20rpx 60rpx;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.identity > view.active {
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
}

.identity > view.active text {
  color: red;
}

