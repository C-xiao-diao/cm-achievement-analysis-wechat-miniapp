/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow-x: hidden;
} 

.br {
  display: block;
}

/* 页面标题样式 */
.h1 .bold {
  font-size: 60rpx;
  font-weight: bold;
}

.h2 {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  padding: 40rpx 0;
}

.title-questions{
  font-size: 44rpx;
  margin-top: 20rpx;
}

/* 页面标题样式end */

.r3 , .r2 {
  display: flex;
}

.mb60 {
  margin-bottom: 60rpx!important;
}

.total > view {
  text-align: center;
  flex: 1;
  height: 75rpx;
  line-height: 75rpx;
  border: 2rpx solid #eee;
  color: #666;
  font-size: 30rpx;
}

.r3 > view {
  width: 225rpx;
}

.r3 > view:nth-child(2){
  border-left: 0;
  border-right: 0;
} 

.r2 > view {
  width: 337.5rpx;
  margin-top: 30rpx;
}

.r2 > view:last-child{
  border-left: 0;
}

.total > view > text {
  font-size: 34rpx;
  color: red;
  padding-left: 6rpx;
}

/* 试卷分析 */
.analysis {
  width: 90%;
}

.analysis-title{
  background-color: #eee;
}

.analysis-title, .analysis-body {
  display: flex;
}
.analysis view text {
  flex: 1;
  width: 33.3%;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  border: 2rpx solid #eee;
}

.note {
  color: red;
  font-size: 26rpx;
  line-height: 35rpx;
  display: block;
  margin-top: 18rpx;
}
/* 试卷分析end */

/* tab切换样式 */
.tab {
  float: right;
  width: 260rpx;
  height: 65rpx;
  display: flex;
  line-height: 65rpx;
  font-size: 28rpx;
  color: #566b8e;
  z-index: 100;
  margin: 0 50rpx 30rpx 0;
}


.tab > text {
  flex: 1;
  display: block;
  text-align: center;
  border: 2rpx solid #566b8e;
}

.tab > text.active {
  background: #566b8e;
  color: #fff;
}

.tab > text:last-child {
  border-left: 0;
}

.fl-tab > text:last-child{
  border-left: 2rpx solid #566b8e;
}

.fl-tab {
  width: 355rpx;
  float: left;
  margin: 0 0 0 50rpx;
}

.fl-tab text {
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.tab-questions {
  float: right;
  display: flex;
  font-size: 28rpx;
  color: #566b8e;
  z-index: 100;
  padding: 0 10%;
}
.tab-questions > text {
  text-align: center;
  padding: 10rpx 20rpx;
  border: 2rpx solid #566b8e;
  margin-bottom: 10rpx;
}

.tab-questions > text.active {
  background: #566b8e;
  color: #fff;
}

.test-questions{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.test-questions text {
  border-radius: 10rpx;
  margin-right: 16rpx;
}
/* tab切换样式end */

/* 图表说明 */
.gray-txt {
  display: block;
  width: 100%;
  font-size: 36rpx;
  text-align: center;
  color: gray;
}