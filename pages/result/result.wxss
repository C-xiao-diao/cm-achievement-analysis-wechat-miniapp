/**result.wxss**/

/* 页面标题样式 */
.h1 .bold {
  font-size: 60rpx;
  font-weight: bold;
}

.h2 {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  padding: 30rpx 0;
}

/* 页面标题样式end */


/* 总体情况 */
.r3 , .r2 {
  display: flex;
}

.r2 {
  margin-bottom: 60rpx;
}

.total > view {
  text-align: center;
  flex: 1;
  height: 75rpx;
  line-height: 75rpx;
  border: 2rpx solid #eee;
  color: #666;
  font-size: 32rpx;
}

.r3 > view {
  width: 200rpx;
}

.r2 > view {
  width: 300rpx;
  margin-top: 30rpx;
}

.total > view > text {
  font-size: 40rpx;
  color: red;
}
/* 总体情况end */


/* tab切换样式 */
.tab {
  float: right;
  width: 300rpx;
  height: 65rpx;
  display: flex;
  line-height: 65rpx;
  font-size: 32rpx;
  color: #566b8e;
  z-index: 100;
  margin-right: 50rpx;
}

.tab > text {
  flex: 1;
  display: block;
  text-align: center;
  border: 2rpx solid #566b8e;
}

.tab > text.active {
  background: #566b8e;
  color: #fff;
}

.tab > text:last-child {
  border-left: 0;
}

/* tab切换样式end */

/* 错题统计样式 */
.error-scale .section {
  display: flex;
  margin-bottom: 30rpx;
}

.section > text {
  display: block;
  width: 180rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}

.error-scale .progress-box {
  width: 480rpx;
  height: 56rpx;
  border: 2rpx solid #ccc;
}

.error-scale .progress-bar {
  width: 460rpx;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #ccc;
  text-align: center;
  font-size: 32rpx;
}
/* 错题统计样式end */

/* 全对题统计样式 */
.all-right {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 30rpx;
}

.all-right text {
  display: block;
  width: 140rpx;
  height: 56rpx;
  font-size: 32rpx;
  line-height: 56rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  margin: 0 14rpx 20rpx;
}

/* 全对题统计样式end */

/* 表格样式 */
.table {
  border:1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 90%;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}

.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th,.td {
  padding: 6px 0;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%
}

.th {
  display: inline-block;
  font-weight: 400;
  background-color: #dadada;
  vertical-align: middle;
}
.tr .td {
  color: #666;
}

.w64 {
  width: 64%;
}

.w40 {
  width:40%;
}

.single .td:first-child {
  color: blue;
}

.parantsTable .tr:last-child .td {
  background-color: #dadada;
}

.td image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.br {
  display: block;
}

.td image.up {
  transform: rotate(180deg);
}

/* 表格样式end */

/* 图表样式 */
.chartWrap {
  width: 100%;
  height: auto;
}

.charts {
  width: 600rpx;
  height: 400rpx;
  margin-bottom: 100rpx;
}

.topChart, .secondChart, .bottomChart {
  width: 100%;
  margin-bottom: 60rpx;
}

.topChart {
  height: 900rpx;
}

.secondChart {
  clear: both;
  height: 550rpx;
}

.bottomChart{
  clear: both;
  height: 550rpx;
}

.trendChart {
  width: 100%;
  height: 300rpx;
  background: #666;
}
/* 图表样式end */

/* 趋势图弹窗样式 */
.popup {
  width: 440rpx;
  background: #fff;
  border: 2rpx solid #eee;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
  position: fixed;
  left: 62px;
  z-index: 100;
}

.popup-title, .popup-subtitle {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 40rpx;
}

.popup-subtitle {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.popup-close {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  display: block;
  width: 50rpx;
  height: 50rpx;
  line-height: 48rpx;
  font-size: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: red;
  color: #fff;
}
/* 趋势图弹窗样式end */