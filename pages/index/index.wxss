/**index.wxss**/
.title {
  font-size: 36rpx;
  padding: 30rpx 0;
}

.title:first-child {
  padding-top: 0;
}

.identity {
  display: flex;
  margin-bottom: 60rpx;
}

.identity .icon {
  display: block;
  width: 100rpx;
  height: 100rpx;
}

.identity .right {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 28rpx;
  height: 28rpx;
}

.identity > view {
  flex: 1;
  padding: 20rpx 60rpx;
  margin: 0 30rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.identity > view.active {
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
}

.identity > view.active::before {
  display: block;
  content: "";
  position: absolute;
  top: -28rpx;
  right: -4rpx;
  width: 0;
  height: 0;
  border-top: 40rpx solid transparent;
  border-bottom: 40rpx solid transparent;
  border-left: 40rpx solid red;
  transform: rotate(-45deg);
}

.identity text {
  width: 100%;
  height: 40rpx;
  display: block;
  text-align: center;
  font-size: 32rpx;
  line-height: 56rpx;
}

.selector {
  display: flex;
  margin-bottom: 60rpx;
}

.selector picker {
  flex: 1;
  width: 220rpx;
  height: 60rpx;
  padding: 0 30rpx 0 20rpx;
  margin: 0 20rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  position: relative;
}

.triangle {
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  width:0;
	height:0;
	border-right:10rpx solid transparent;
	border-left:10rpx solid transparent;
	border-top:10rpx solid #666;
}

.fillIn {
  display: flex;
}

.fillIn > view {
  position: relative;
}

.school {
  width: 240rpx;
  margin-right: 20rpx;
}

.class {
  width: 180rpx;
  margin-right: 20rpx;
}

.course {
  width: 180rpx;
}

.fillIn > view > text {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}

.fillIn > view > input,.course picker {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 10rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.fillIn .ul {
  position: absolute;
  bottom: 75rpx;
  left: 0;
  width: calc(100% - 20rpx);
  padding: 10rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  height: 255rpx;
  background: #fff;
  overflow-x: hidden;
  z-index: 10;
}

.fillIn .ul text {
  display: block;
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 32rpx;
  color: #666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.btn {
  width: 100%;
  position: absolute;
  bottom: 80rpx;
  left: 0;
}

.btn button {
  margin: 0 auto;
  background: #333;
  color: #fff;
}