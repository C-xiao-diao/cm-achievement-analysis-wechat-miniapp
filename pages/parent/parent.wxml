<!--parent.wxml-->
<view class="container">
    <text class="h1"><text class="bold">{{yearMonth}}</text>月考成绩</text>
    <text class="h2">（{{class + ' - ' + studentName}}）</text>

    <!-- 成绩表 -->
    <view class="table parantsTable mb60">
        <view class="tr">
            <view class="th">科目</view>
            <view class="th">得分</view>
            <view class="th">班级排名</view>
            <view class="th">学校排名</view>
            <view class="th">班级<br />平均分</view>
            <view class="th">年级<br />最高分</view>
        </view>
        <view class="tr">
            <view class="td">语文</view>
            <view class="td">105</view>
            <view class="td">1(<image class="up" src="/imgs/arrow_up.svg"></image>1)</view>
            <view class="td">5(<image class="down" src="/imgs/arrow_down.svg"></image>1)</view>
            <view class="td">80</view>
            <view class="td">90</view>
        </view>
        <view class="tr">
            <view class="td">总分</view>
            <view class="td">105</view>
            <view class="td">1(<image class="up" src="/imgs/arrow_up.svg"></image>1)</view>
            <view class="td">5(<image class="down" src="/imgs/arrow_down.svg"></image>1)</view>
            <view class="td">80</view>
            <view class="td">90</view>
        </view>
    </view>

    <!-- 历史年级排名走势 -->
    <text class="title">— 历史年级排名走势 —</text>
    <text class="subtitle">（点击图标可选中或取消对比项）</text>
    <view class="chart">
        <ec-canvas id="parentTopChart" canvas-id="parentTopChart" ec="{{ ecTopChart }}"></ec-canvas>
    </view>

    <!-- 选择科目 -->
    <view class="choose">
        <view class="section__title">选择科目</view>
        <picker bindchange="pickSubject" value="{{gradeIndex}}" range="{{subArray}}">
            <view class="picker">
            {{subArray[subjectIndex]}}
            </view>
        </picker>
    </view>

    <!-- 各题得分（客观题） -->
    <text class="title">— 各题得分（客观题） —</text>
    <view class="tab-questions test-questions">
      <text class="swiper-tab-list {{activeTabIndex==index ? 'active' : ''}}" data-current="{{index}}" data-name="{{item}}" bindtap="swichNav">第一题</text>
      <text class="swiper-tab-list" data-current="{{index}}" data-name="{{item}}" bindtap="swichNav">第二题</text>
    </view>
    <text class="exam-number">第一题</text>
    <view class="show-result">
        <text>选<text class="red">C</text></text>
        <text>正确答案<text class="red">D</text></text>
        <text>年级正确率<text class="red">80%</text></text>
    </view>

    <!-- 各题得分（主观题） -->
    <text class="title">— 各题得分（主观题） —</text>
    <view class="tab-questions test-questions">
      <text class="swiper-tab-list {{activeTabIndex==index ? 'active' : ''}}" data-current="{{index}}" data-name="{{item}}" bindtap="swichNav">第一题</text>
      <text class="swiper-tab-list" data-current="{{index}}" data-name="{{item}}" bindtap="swichNav">第二题</text>
    </view>
    <text class="exam-number">第一题</text>
    <view class="show-result">
        <text>得分<text class="red">3</text></text>
        <text>年级得分率<text class="red">80%</text></text>
    </view>
    <!-- 主观题得分分布图 -->
    <view class="chart mb60">
        <ec-canvas id="parentSecondChart" canvas-id="parentSecondChart" ec="{{ ecSecondChart }}"></ec-canvas>
    </view>
    
</view>