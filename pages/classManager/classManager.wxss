
.choose {
    display: flex;
    flex-direction: row;
    margin: 30rpx 0;
}

.section__title ,.choose picker {
    padding: 10rpx 30rpx;
}

.choose picker {
    border: 2rpx solid #eee;
}

.chart {
    width: 96%;
    height: 900rpx;
    margin: 30rpx 0;
}

.fl-tab {
    width: 40%;
    float: left;
}

.txtBtn{
    width: 100%;
    text-align: right;
}

.button {
    color: blue;
    font-size: 32rpx;
    margin-right: 10%;
    margin-bottom: 20rpx;
}

.newTab {
    margin: 0 0 20rpx 60%;
}

.fl-tab {
    margin: 0;
}

.tab > text {
    flex: none;
    padding: 0 20rpx;
}

.fl-tab > text:nth-child(2) {
    border-left: 2rpx solid #566b8e!important;
}

.tab > text:nth-child(2){
    border-left: 0;
}

.tabWrap{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.score-input {
    display: flex;
    width: 55%;
}

.tab-score{
    /* 此处是改掉 app.wxss的 .tab样式，保证垂直居中 */
    margin: 0;   
}

.score-input input{
    width: 15%;
    padding: 0 20rpx;
    margin: 0 10rpx 0 10%;
    border: 2rpx solid #eee;
    border-radius: 10rpx;
}

.score-input text text {
    font-size: 20rpx;
    color: red;
}

.subDes {
    display: block;
    width: 100%;
    text-align: center;
    color: #666;
    font-size: 28rpx;
    margin: -30rpx 0 30rpx;
}


/* 优秀线样式 */
.excellent {
    width: 100%;
    line-height: 50rpx;
    font-size: 36rpx;
  }

  .excellent input {
    width: 15%;
    border: 2rpx solid #eee;
    margin: 0 10rpx;
  }

  .excellent .text {
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: center;
    text-align: center;
  }

  .excellent .subText {
    width: 100%;
    text-align: center;
  }

  .subText {
    color: #666;
    font-size: 28rpx;
  }

  .shareButton {
    width: 500rpx!important;
    font-size: 32rpx;
  }