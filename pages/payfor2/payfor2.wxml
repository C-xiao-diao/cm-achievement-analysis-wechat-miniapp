            <text class="{{pickupType==2 ? 'active' : ''}}" data-current="{{2}}" data-name="pickupType"
                bindtap="swichNav2">快递配送</text>
        </view>
        <view class="tab-container">
            <view class="auto-pickup" wx:if="{{pickupType===1}}">
                <text>{{autoPickUpAddress}}</text>
