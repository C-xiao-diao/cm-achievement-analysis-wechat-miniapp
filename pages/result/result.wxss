/**result.wxss**/
.h1 .bold {
  font-size: 60rpx;
  font-weight: bold;
}

.h2 {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  padding: 30rpx 0;
}

.r3 , .r2 {
  display: flex;
}

.r2 {
  margin-bottom: 60rpx;
}

.total > view {
  text-align: center;
  flex: 1;
  height: 75rpx;
  line-height: 75rpx;
  border: 2rpx solid #eee;
  color: #666;
  font-size: 32rpx;
}

.r3 > view {
  width: 200rpx;
}

.r2 > view {
  width: 300rpx;
  margin-top: 30rpx;
}

.total > view > text {
  font-size: 40rpx;
  color: red;
}

.compareChart {
  width: 90%;
  height: 675rpx;
  background: #eee;
  margin-bottom: 60rpx;
}

.error-scale .section {
  display: flex;
  margin-bottom: 30rpx;
}

.section > text {
  display: block;
  width: 180rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}

.error-scale .progress-box {
  width: 480rpx;
  height: 56rpx;
  border: 2rpx solid #ccc;
}

.error-scale .progress-bar {
  width: 460rpx;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #ccc;
  text-align: center;
  font-size: 32rpx;
}

.all-right {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 30rpx;
}

.all-right text {
  display: block;
  width: 140rpx;
  height: 56rpx;
  font-size: 32rpx;
  line-height: 56rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  margin: 0 14rpx 20rpx;
}

.table {
  border:1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 90%;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}

.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th,.td {
  padding: 6px 0;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%
}

.th {
  display: inline-block;
  font-weight: 400;
  background-color: #dadada;
  vertical-align: middle;
}
.tr .td {
  color: #666;
}

.w64 {
  width: 64%;
}

.w40 {
  width:40%;
}

.parantsTable .tr:last-child .td {
  background-color: #dadada;
}

.td image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.br {
  display: block;
}

.td image.up {
  transform: rotate(180deg);
}

.charts {
  width: 600rpx;
  height: 400rpx;
  margin-bottom: 100rpx;
}
