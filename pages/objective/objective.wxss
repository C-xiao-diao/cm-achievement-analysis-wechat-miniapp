/* 错题统计样式 */
.avg-error {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  height: 45rpx;
  line-height: 45rpx;
  margin-bottom: 30rpx;
}

.avg-error text {
  font-size: 42rpx;
  color: red;
  padding-left: 10rpx;
}

.error-scale .section {
  display: flex;
  margin-bottom: 30rpx;
}

.section > text {
  display: block;
  width: 180rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}

.error-scale .progress-box {
  width: 480rpx;
  height: 56rpx;
  border: 2rpx solid #ccc;
}

.error-scale .progress-bar {
  width: 460rpx;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #ccc;
  text-align: center;
  font-size: 32rpx;
}
/* 错题统计样式end */
