    <button open-type="getPhoneNumber" wx:if="{{authorizePhone==''}}" bindgetphonenumber="getPhoneNumber">专属错题集 <text>点击订购</text></button>
    <button class="goToPay" wx:if="{{authorizePhone!=''}}" bindtap="goToPay">专属错题集 <text>点击订购</text></button>

    <!-- 地址弹框 -->
    <view wx:if="{{isShowAddrModal}}" class="mask">
        <view class="devivery">
            <!-- <view class="cancelModal" bindtap="cancelModal">
                <text> 关闭 </text>
            </view> -->
            <image class="cancelModal" bindtap="cancelModal" src="/imgs/close.png"></image>
            <view>
                <text>联系人：</text>
                <input type="text" class="weui-input" bind:input="getInputValue" data-name="contactPerson"
                    value="{{contactPerson}}" />
            </view>
            <view>
                <text>电话：</text>
                <button class="get-phone" wx:if="{{authorizePhone==''}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber"></button>
                <input type="text" class="weui-input" bind:input="getInputValue" data-name="phone" value="{{phone}}" />
            </view>
            <view>
                <text>地址：</text>
                <input type="text" class="weui-input" bind:input="getInputValue" data-name="address"
                    value="{{address}}" />
            </view>
            <text class="note">顺丰不包邮，费用根据地点调整</text>
            <button bindtap="addAddress" class="addAddress">提交</button>
        </view>
